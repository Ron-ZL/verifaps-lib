FUNCTION_BLOCK T1L

    VAR_OUTPUT 
        o : bool;
    END_VAR


    STEP A 
        on active action 
            o := true;
        end_action 
    END_STEP
    
    STEP B
       on active action 
            o := false;
       end_action 
    END_STEP
    
    GOTO true :: A->B
    GOTO true :: B->A
    
END_FUNCTION_BLOCK
