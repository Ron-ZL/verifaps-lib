SFC T2L

    VAR_OUTPUT 
        o : int;
    END_VAR

    VAR_INPUT 
        i : int;
    END_VAR 


    STEP A
        on active action 
            o := i;
        end_action
    END_STEP 
    
    
    STEP B1 
        ON active ACTION
            o := 1;
        END_ACTION
    END_STEP
    
    STEP B2 
        ON active ACTION
            o := 2;
        END_ACTION
    END_STEP


    GOTO i<= 562 :: A -> B1;
    GOTO i> 562 :: A -> B2;

END_SFC
