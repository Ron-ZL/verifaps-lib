FUNCTION_BLOCK T2L

    VAR_OUTPUT 
        o : int;
    END_VAR

    VAR_INPUT 
        i : int;
    END_VAR 


    INITIAL_STEP A:
	A_active(N);
END_STEP

ACTION A_active: o := i; END_ACTION
STEP B1:
	B1_active(N);
END_STEP

ACTION B1_active: o := 1; END_ACTION
STEP B2:
	B2_active(N);
END_STEP

ACTION B2_active: o := 2;   END_ACTION
TRANSITION FROM A TO B1 := i<= 562; END_TRANSITION
    TRANSITION FROM A TO B2 := i> 562; END_TRANSITION

END_FUNCTION_BLOCK
