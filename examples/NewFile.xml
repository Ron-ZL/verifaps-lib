<?xml version="1.0" encoding="UTF-8"?>
<test-table xmlns="http://formal.iti.kit.edu/exteta-1.0"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://formal.iti.kit.edu/exteta-1.0 ../src/main/xsd/exteta-1.0.xsd "
            name="Ta"
            version="1.0">

    <variables>
        <variable data-type="INT" io="input" name="sensor"/>
        <variable data-type="BOOLEAN" io="output" name="actuator"/>
        <constraint data-type="BOOLEAN" name="XX" constraint="[2,10]"/>
    </variables>

    <steps>
        <step duration="1">
            <cell>1</cell>
            <cell>true</cell>
        </step>

        <step duration="[1,5]">
            <cell>1</cell>
            <cell>sensor*2</cell>
        </step>

        <step duration="-">
            <cell>=prev(actuator)</cell>
            <cell>=SEL(TRUE, FALSE, TRUE)</cell>
        </step>
    </steps>

    <functions>
        FUNCTION SEL : BOOL
            VAR_INPUT
                a : BOOL;
                b : BOOL;
                c : BOOL;
            END_VAR
            IF a THEN SEL := b; ELSE SEL := c; END_IF
        END_FUNCTION
    </functions>

</test-table>
