<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<test-table xmlns="http://formal.iti.kit.edu/exteta-1.0" version="1.0">
    <variables>
        <variable io="input" name="TPy" data-type="INT"/>
        <variable io="input" name="TPSet" data-type="INT"/>
        <variable io="input" name="Mode" data-type="ENUM"/>
        <variable io="input" name="SensorInput" data-type="INT"/>
        <variable io="output" name="SensorOutput" data-type="INT"/>
        <variable io="input" name="iY" data-type="INT"/>

        <constraint name="x1" data-type="INT"/>
        <constraint name="x2" data-type="INT"/>
        <constraint name="y1" data-type="INT"/>
        <constraint name="y2" data-type="INT"/>

        <!--       <constraint name="TOUT" data-type="INT"/> -->
    </variables>


    <steps>
        <step duration="[0,-]">
            <cell>0</cell> <!-- TPy -->
            <cell>-</cell> <!-- TPSet -->
            <cell>Op</cell> <!-- Mode -->
            <cell>-</cell> <!-- X -->
            <cell>0</cell> <!-- Y -->
        </step>


        <step duration="[1,10]">
            <cell>-</cell> <!-- TPy -->
            <cell>0</cell> <!-- TPSet -->
            <cell>Teach</cell> <!-- Mode -->
            <cell>-</cell> <!-- X -->
            <cell>0</cell> <!-- Y -->
        </step>


        <step duration="[1,1]">
            <cell>y1</cell> <!-- TPy -->
            <cell>1</cell> <!-- TPSet -->
            <cell>Teach</cell> <!-- Mode -->
            <cell>x1</cell> <!-- X -->
            <cell>0</cell> <!-- Y -->
        </step>


        <step duration="[1,10]">
            <cell>-</cell> <!-- TPy -->
            <cell>0</cell> <!-- TPSet -->
            <cell>Teach</cell> <!-- Mode -->
            <cell>-</cell> <!-- X -->
            <cell>0</cell> <!-- Y -->
        </step>


        <step duration="[1,1]">
            <cell>y1</cell> <!-- TPy -->
            <cell>1</cell> <!-- TPSet -->
            <cell>Teach</cell> <!-- Mode -->
            <cell>x1</cell> <!-- X -->
            <cell>0</cell> <!-- Y -->
        </step>


        <step duration="[1,1]">
            <cell>-</cell> <!-- TPy -->
            <cell>-</cell> <!-- TPSet -->
            <cell>Teach</cell> <!-- Mode -->
            <cell>-</cell> <!-- X -->
            <cell>0</cell> <!-- Y -->
        </step>

        <step duration="[1,1]">
            <cell>-</cell> <!-- TPy -->
            <cell>-</cell> <!-- TPSet -->
            <cell>Op</cell> <!-- Mode -->
            <cell>-</cell> <!-- X -->
            <cell>
                = y1 + (y2-y1) / (x2-x1) * (X - x1)
            </cell> <!-- Y -->
        </step>

    </steps>

</test-table>