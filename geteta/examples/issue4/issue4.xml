<?xml version="1.0" encoding="UTF-8"?>
<test-table xmlns="http://formal.iti.kit.edu/exteta-1.1" version="1.1">
    <variables>
        <variable data-type="BOOLEAN" io="input" name="var_pedBtnPress"/>
        <variable data-type="BOOLEAN" io="output" name="var_carLight"/>
        <variable data-type="BOOLEAN" io="output" name="var_pedLight"/>
        <variable data-type="INT" io="output" name="var_counter"/>
    </variables>
    <steps>
        <step duration="[3,3]">
            <cell>FALSE</cell>
            <cell>TRUE</cell>
            <cell>FALSE</cell>
            <cell>0</cell>
        </step>
        <step duration="[1,1]">
            <cell>TRUE</cell>
            <cell>FALSE</cell>
            <cell>FALSE</cell>
            <cell>= var_counter[-1]+1</cell>
        </step>
        <step duration="[9,9]">
            <cell>-</cell>
            <cell>FALSE</cell>
            <cell>FALSE</cell>
            <cell>= var_counter[-1]+1</cell>
        </step>
        <step duration="[1,1]">
            <cell>-</cell>
            <cell>FALSE</cell>
            <cell>TRUE</cell>
            <cell>= var_counter[-1]+1</cell>
        </step>
    </steps>
</test-table>